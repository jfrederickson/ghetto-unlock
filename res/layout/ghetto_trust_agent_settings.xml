<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/enable_trust"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Grant trust for 30 seconds" />

    <Button
        android:id="@+id/revoke_trust"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Revoke trust" />

    <CheckBox
        android:id="@+id/managing_trust"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="Managing trust" />

    <CheckBox
        android:id="@+id/report_unlock_attempts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="Report unlock attempts" />

    <CheckBox
        android:id="@+id/unlock_on_power_connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="Unlock on power connect" />

    <TextView
        android:id="@+id/trusted_ssid_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:paddingTop="8dp"
        android:text="Trusted SSID"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Spinner
        android:id="@+id/trusted_ssid_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingTop="4dp" />

    <TextView
        android:id="@+id/trusted_pubkey_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:paddingTop="8dp"
        android:text="Trusted NFC tag public key"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/trusted_pubkey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingTop="4dp"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/import_pub_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Import public key" />

    <Button
        android:id="@+id/clear_pub_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clear public key" />

</LinearLayout>